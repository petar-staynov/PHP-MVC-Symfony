{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% if categories|length > 0 %}
            <div class="list-group">
                {% for category in categories %}
                    <a href="">
                        <button type="button" class="list-group-item">{{ category.name }}</button>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center">
                <h1>No categories found on the server</h1>
            </div>
        {% endif %}
    </div>
{% endblock %}


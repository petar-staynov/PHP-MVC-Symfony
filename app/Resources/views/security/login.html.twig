{% extends 'base.html.twig' %}
{% block body %}
    <h1>Login page</h1>

    <div class="container center-block">
        <form name="authenticate" action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label class="control-label" for="username">Username:</label>
                <input class="form-control" type="text" name="_username"><br>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" name="_password"><br>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/><br>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Login"><br>
            </div>
        </form>
    </div>
{% endblock %}
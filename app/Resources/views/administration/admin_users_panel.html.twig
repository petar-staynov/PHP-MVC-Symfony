{% extends '/administration/administration_base.html.twig' %}

{% block body %}
    <div id="wrapper" class="toggled">
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <h1>Edit users</h1>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Username</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td style="font-size: x-large"> {{ user.getUsername() }} </td>
                                <td>
                                    <a class="btn btn-info disabled" href="{{ path('admin_users_panel', {'id': user.id}) }}">View</a>
                                    <a class="btn btn-warning disabled" href="{{ path('admin_user_edit', {'id': user.id}) }}">Edit</a>
                                    <a class="btn btn-danger" href="{{ path('admin_user_delete', {'id': user.id}) }}">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td class="text-left" colspan="2" style="font-size: x-large">
                                <a class="btn btn-success" href="{{ path('admin_user_add') }}">Add new user</a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% extends 'administration/administration_base.twig' %}

{% block body %}
    <div id="wrapper" class="toggled">
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>{{ category.name }}</h1>
                        {% if items|length > 0 %}
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Price</th>
                                    <th>Owner</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td style="font-size: x-large"> {{ item.name }} </td>
                                        <td>{{ item.price }}</td>
                                        <td>{{ item.getOwnerUsername() }}</td>
                                        <td>{{ item.getDateAdded().format('d-m-y') }}</td>
                                        <td>
                                            <a class="btn btn-info" href="">View</a>
                                            <a class="btn btn-warning" href="">Edit</a>
                                            <a class="btn btn-danger" href="">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td class="text-center" colspan="5" style="font-size: x-large">
                                        <a class="btn btn-success" href="">Add new item to this category</a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        {% else %}
                            <div class="text-center">
                                <h1>There are no items in this category</h1>
                                <a class="btn btn-success" href="">Add new item to this category</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
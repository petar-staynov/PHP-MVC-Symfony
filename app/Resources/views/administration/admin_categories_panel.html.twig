{% extends 'administration/administration_base.twig' %}

{% block body %}
    <div id="wrapper" class="toggled">
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <h1>Edit categories</h1>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td style="font-size: x-large"> {{ category.name }} </td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('admin_category_view', {'id': category.id}) }}">View</a>
                                    <a class="btn btn-warning" href="{{ path('admin_category_edit', {'id': category.id}) }}">Edit</a>
                                    <a class="btn btn-danger" href="{{ path('admin_category_delete', {'id': category.id}) }}">Delete</a>
                                </td>
                            </tr>
                    {% endfor %}
                        <tr>
                            <td class="text-center" colspan="2" style="font-size: x-large">
                                <a class="btn btn-success" href="">Add new category</a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
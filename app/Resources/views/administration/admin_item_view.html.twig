{% extends '/administration/administration_base.html.twig' %}

{% block body %}
    <div id="wrapper" class="toggled">
        <div id="page-content-wrapper">
            <div class="row">
                <div class="col-lg-1">
                    <div class="container text-center">
                        <div class="panel panel-default" style="max-width: 60%">
                            <div class="panel-heading">Name: {{ item.name }}</div>
                            <div class="panel-heading">Added by: {{ item.ownerUsername }} ({{ item.getOwnerName() }}
                                )
                            </div>
                            <div class="panel-heading">Added on {{ item.getDateAdded.format('d-m-y') }}</div>
                            <div class="panel-body">
                                <img src="{{ asset(item.imagePath) }}" class="img-responsive" style="width:100%"
                                     alt="Image">
                            </div>
                            <div class="panel-default text-center">{{ item.description }}</div>
                            <div class="panel divider"></div>
                            <div class="panel-default text-center">Price: {{ item.price }} BGN</div>
                            <div class="panel-footer">
                                <a class="btn btn-warning"
                                   href="{{ path('admin_item_edit', {'id': item.id}) }}">Edit</a>
                                <a class="btn btn-danger"
                                   href="{{ path('admin_item_delete', {'id': item.id}) }}">Delete</a>
                                <a class="btn btn-success" href="#">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

